<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="set-unique-name-1" author="dzmitry.kapachou">

        <createTable tableName="portfolio">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="cash" type="BIGINT"/>
        </createTable>

        <createTable tableName="asset">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="asset" type="VARCHAR(255)"/>
            <column name="cusip" type="VARCHAR(255)"/>
            <column name="maturity_bucket" type="VARCHAR(255)"/>
            <column name="portfolio_id" type="BIGINT"/>
        </createTable>

    </changeSet>

</databaseChangeLog>


